{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container registration">
        <!-- Registration Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 mt-5 text-center">Inscrivez-vous</h1>
                {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <div class="form-group">
                            {{ form_row(registrationForm.first_name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            {{ form_row(registrationForm.last_name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            {{ form_row(registrationForm.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            {{ form_row(registrationForm.agreeTerms, {
                                label: "J'accepte les termes"
                            }) }}
                        </div>
                    </div>
                    <div class="form-group mt-5 text-center">
                        <div class="form-group">
                            <button type="submit" formnovalidate class="btn btn-lg btn-primary btn-block">Inscription</button>
                        </div>
                    </div>
                    <div class='mt-5 mb-3 text-muted text-center'>
                        Déjà un compte ? <a href="{{ path('app.login') }}">Se connecter</a>
                    </div>
            {{ form_end(registrationForm) }}
            </div>
        </div>
        <!-- End Registration Form -->
    </div>
{% endblock %}
