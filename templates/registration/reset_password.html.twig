{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container registration">
        <!-- Registration Form -->
        <div class="row justify-content-center">         
            <div class="col-md-6">
                <h1 class="mb-5 mt-5 text-center">Mot de passe oublié</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                            {{ form_row(form.password) }}
                    </div>
                    <div class="form-group">
                            {{ form_row(form.confirm_password) }}
                    </div>

                    <div class="form-group mt-5 text-center">
                        <div class="form-group">
                            <button type="submit" formnovalidate class="btn btn-lg btn-primary btn-block">Modifier mon mot de passe</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        <!-- End Registration Form -->
    </div>
{% endblock %}
