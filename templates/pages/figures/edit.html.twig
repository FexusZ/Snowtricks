{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <script src="{{ asset('js/figure.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="jumbotron text-center mt-5">
        <h1> Edition de figure</h1>
    </div>

    {% if figure.images is defined or figure.videos is defined%}
        <div class="container">
            <div class="row">

                {% for image in figure.images %}
                    <div class="col-md-2">
                        <img data-id='{{ image.id }}' data-nom='{{ image.image }}' class='image-change image-height w-100' src="{{ asset("uploads") ~ "/" ~ image.image }}">
                        <button class="btn btn-outline-info btn-sm btn-trick btn-margin-edit">
                            <i class="fa fa-edit"></i>
                        </button>
                    </div>        
                {% endfor %}

                {% for video in figure.videos%}
                    <div class="col-md-2">
                        <embed data-id='{{ video.id }}' class='video-change d-block w-100 image-height' src="{{ video.video }}" frameborder="0" allow="autoplay; encrypted-media"  allowfullscreen />

                        <button class="btn btn-outline-info btn-sm btn-trick btn-margin-edit">
                            <i class="fa fa-edit"></i>
                        </button>

                    </div>  
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>


    <div class="container mt-5">
        {{ form_start(form) }}
        {{ form_row(form.figure) }}
        {{ form_row(form.description) }}
        {{ form_row(form.groupe) }}
        {{ form_row(form.images) }}
        <div class="video">
            {{ form_row(form.videos) }}
            <div class="text-center">
                <legend class="col-form-label">Ajouter des vid√©os : <img src="{{ asset("uploads") }}/plus.png" class="plus"></legend>
            </div>
        </div>
        
        <div class="text-right">
            <input type="submit" class="btn btn-primary" value="Modifier la figure">
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}