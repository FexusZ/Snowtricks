{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron text-center">
        <h1> Listes des figures</h1>
    </div>
    {% for tab_row in tab_query %}
        <a href="{{ path('figure.show', {'id': tab_row.figure.id}) }}">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="text-center">
                                        {{ tab_row.figure.figure }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <img class='w-100' src='{{ asset('uploads') }}/{{ tab_row.image.image }}'>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    {%  endfor %}
{% endblock %}